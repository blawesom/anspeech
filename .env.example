# AnSpeech Configuration
OUTPUT_DIR=./output
SEGMENT_DURATION=600
WHISPER_MODEL=large-v3
WHISPER_LANGUAGE=fr

# Diarization (speaker identification)
DIARIZATION_ENABLED=true
HF_TOKEN=                          # Hugging Face token (required for pyannote diarization)
MIN_SPEAKERS=                       # Optional: minimum expected speakers
MAX_SPEAKERS=                       # Optional: maximum expected speakers

# S3 settings
S3_BUCKET=s3://public/
S3_PUBLIC_URL=https://oos.eu-west-2.outscale.com/public/
RETENTION_DAYS=7
MAX_CONCURRENT_STREAMS=1
